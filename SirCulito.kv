WindowManager:
    MapWindow:
    InventoryWindow:

<MapWindow>:
    name: "first"
    MyGridLayout:

<InventoryWindow>:
    name: "second"
    CharacterSheet

<MyGridLayout>
    cols: 1 
        
    MovementLayer:
        id: base

        MapLayer:
            id: map

        RelativeLayout:
            id: characters

    GridLayout:
        rows: 1
        name: 'Menu'
        size_hint: 1, None
        height: 50

        Button:
            name: 'Button'
            text: 'Start'
            font_size: 32
            on_press:  root.press()
            size_hint: None, 1
            size_x: 100
        
        Button:
            name: 'Reset'
            text: 'Reset'
            font_size: 32
            on_press:  root.reset()
            size_hint: None, 1
            size_x: 100

        Button:
            name: 'Character'
            text: 'Culito'
            font_size: 32
            on_release:  app.root.current = "second"
            size_hint: None, 1
            size_x: 100

<HexTile>:
    name: 'HexTile'
    adjacent: []
    level: 0
    angle: 0
    exitId: 123
    isParent: False
    current: False
    isParent: False
    opacity: 0
    background_color: (0,0,0,0)
    on_press: root.press()
    source: 'Hex9.png'
    text: "Submit"
    font_size: 32
    size_hint: None, None
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
    canvas.after:
        PopMatrix

<Player>:
    source: 'SirCulito.png'
    size_hint: None, None

<Slot>:
    txt: ""
    src: "SirCulito.png"
    background_color: (.5, .5, .5, 1)
    Item:
        source: self.parent.src
        center: self.parent.center
    Label:
        text: self.parent.txt
        center: self.parent.center

<Item>:
    on_press: root.parent.press()
    

